<h1>Login to myRecipes</h1>

<div class="row">
 
 
    <div class="col-md-6 col-md-offset-3 well">
        
        <%= form_tag '/login' do %>
            <div class="form-group">
                Email:<br/> <%= text_field_tag :email, nil, class:"form-control" %>
            </div>
            <div class="form-group">
                Password:<br/> <%= password_field_tag :password, nil, class: "form-control" %>
            </div>
            
            <%= submit_tag "Log In", class: "btn btn-primary" %>
            <%= link_to "Cancel", root_path, class: "btn btn-danger" %>
        <% end %>
    
    </div>

</div>